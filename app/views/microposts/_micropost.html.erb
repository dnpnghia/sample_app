<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user.avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <%= image_tag micropost.display_image if micropost.image.attached? %>
  <span class="timestamp">
    <%= t "microposts.posted" %>
    <%= time_ago_in_words micropost.created_at %>
    <%= t "microposts.ago" %>.
    <% if current_user? micropost.user %>
      <%= link_to t("microposts.delete"), micropost, method: :delete,
        data: {confirm: t("microposts.sure")} %>
    <% end %>
  </span>
</li>
