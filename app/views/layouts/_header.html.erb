<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("appname"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home.home"), "#" %></li>
        <li><%= link_to t("help.help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("users.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= t "users.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.profile"), current_user %></li>
              <li><%= link_to t("users.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("sessions.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
